<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.edushare_qa.Mapper.ClassMapper">

    <delete id="delete">
        delete from classes where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>


    <update id="update">
        update classes
        <set>
            <if test="title!=null and title!='' ">title=#{title},</if>
            <if test="classType!=null and classType!='' ">class_type= #{classType},</if>
            <if test="description!=null and description!='' ">description= #{description},</if>
            <if test="institute!=null and institute!='' ">institute= #{institute},</if>
            <if test="teacherName!=null and teacherName!='' ">teacher_name= #{teacherName},</if>
            <if test="createdAt!=null">created_at= #{createdAt},</if>
            <if test="updatedAt!=null">updated_at= #{updatedAt},</if>
        </set>
        where id = #{id}
    </update>

</mapper>